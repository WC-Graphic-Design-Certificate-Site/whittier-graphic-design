---
import { PortableText } from "astro-portabletext";
import { urlFor } from "../utils/sanity";

const { facultyMember, flipped } = Astro.props;
---

<article class:list={["container", flipped && "flipped"]}>
  <div class="relative flow">
    <h2 class="title">{facultyMember.name}</h2>
    <PortableText value={facultyMember.bio} />
  </div>
  <div class="background"></div>
  <img
    class="img"
    src={urlFor(facultyMember.image).width(600).url()}
    alt={facultyMember.name}
  />
</article>

<style>
  .container {
    position: relative;
    font-family: var(--font-primary);
    /* height: clamp(var(--space-3xl), 45vh, 60rem); */
  }

  .relative {
    position: relative;
    z-index: 3;
    color: var(--color-neutral-light);
    padding: 2rem;
    margin-top: 6rem;
    width: clamp(var(--space-3xl), 60%, 85vw);
  }

  .title {
    font-family: var(--font-emphasis);
    text-transform: uppercase;
    letter-spacing: 0.25rem;
    font-size: var(--step-1);
  }

  .background {
    position: absolute;
    inset: 0;
    width: clamp(var(--space-3xl), 70%, 90vw);
    background-color: var(--color-brand-primary);
    clip-path: var(--angled-clip-path);
    z-index: 2;
  }

  .img {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: clamp(var(--space-3xl), 50%, 50vw);
    object-fit: cover;
    height: 100%;
  }

  .flipped .background {
    top: 0;
    right: 0;
    bottom: 0;
    left: auto;
    clip-path: polygon(16% 0, 100% 0, 100% 100%, 3% 100%);
  }

  .flipped .relative {
    top: 0;
    right: 0;
    bottom: 0;
    left: auto;
    float: right;
  }

  .flipped .img {
    right: auto;
    left: 0;
  }

  @media (max-width: 768px) {
    .container {
      display: flex;
      flex-direction: column;
    }

    .relative {
      width: 100%;
      order: 2;
      margin-top: 1rem;
    }

    .img {
      position: relative;
      height: auto;
      width: 100%;
      order: 1;
      z-index: 3;
      clip-path: polygon(0 0, 100% 0, 100% 94%, 0% 100%);
    }

    .background {
      clip-path: none;
      width: 100%;
    }

    .flipped .background {
      clip-path: none;
      width: 100%;
    }

    .relative,
    .flipped .relative {
      display: block;
      float: none;
    }

    .flipped .img {
      clip-path: polygon(0 0, 100% 0, 100% 100%, 0% 94%);
    }
  }
</style>
