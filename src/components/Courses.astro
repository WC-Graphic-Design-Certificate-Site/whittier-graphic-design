---
import Accordion from "./Svelte/Accordion.svelte";
import { slugify } from "../utils/format";

const { courses } = Astro.props;
---

<div class="courses flow">
  <!-- <div class="number">
    <span>1</span>
  </div> -->
  {
    courses.map((course) => (
      <div id={slugify(course.title)}>
        <Accordion client:load>
          <Fragment slot="title">
            <span>
              {course.title}
              {course.subtitle && (
                <span class="course-subtitle" style="">
                  {`(${course.subtitle})`}
                </span>
              )}
            </span>
          </Fragment>
          <Fragment slot="panel">
            <div class="course-intro">{course.description}</div>
            <div class="topics-wrapper">
              <div class="topics-header">
                <p style="font-weight: 700;">Weekly Topics</p>
                <p style="font-weight: 400;">{course.title}</p>
              </div>
              <div class="topics flow">
                {course.topics &&
                  course.topics.map((topic, index) => (
                    <article class="topic-grid">
                      <div class="number">
                        <span>{index + 1}</span>
                      </div>
                      <div class="topic">
                        <h3>{`${topic.title}:`}</h3>
                        <p>{topic.text}</p>
                      </div>
                    </article>
                  ))}
              </div>
            </div>
          </Fragment>
        </Accordion>
      </div>
    ))
  }
</div>

<style is:global>
  .courses.flow {
    gap: 0;
    --flow-space: 0.5rem;
  }

  .courses .topics.flow {
    --flow-space: var(--space-l);
  }

  .accordion-button {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border: 0;
    margin: 0;
    padding: 1rem 2rem 1rem 1rem;
    width: 100%;
    appearance: none;
    color: inherit;
    cursor: pointer;
    font-size: var(--step-1);
    color: var(--color-neutral-light);
    background: var(--full-gradient);
    font-family: var(--font-secondary);
    font-weight: 400;
    text-align: left;
    text-transform: uppercase;
    letter-spacing: 0.1rem;
    /* clip-path: polygon(0 0, 100% 0, 97% 100%, 0% 100%); */
  }

  .accordion-button:hover {
    background: var(--color-brand-secondary-dark);
  }

  .accordion-panel {
    padding-block: var(--space-l);
    /* padding-inline: 1rem; */
  }

  .courses .course-intro {
    font-size: var(--step-2);
    font-family: var(--font-primary);
    color: var(--color-brand-secondary-light);
    /* max-width: 64ch; */
    margin-block-end: var(--space-2xl);
  }

  .courses .topics-wrapper {
    display: flex;
  }

  .courses .topics-header {
    position: relative;
    font-family: var(--font-secondary);
    font-size: var(--step-1);
    text-transform: uppercase;
    letter-spacing: 0.2rem;
    text-align: right;
    align-self: start;
    writing-mode: vertical-rl;
    transform: rotate(180deg);
    margin-right: var(--space-2xl);
    color: var(--color-brand-secondary-light);
    top: 1rem;
  }

  .courses .course-subtitle {
    position: relative;
    margin-left: 6px;
    /* font-family: var(--font-sans);
    font-weight: 400; */
  }

  .courses .topic-grid {
    position: relative;
    display: grid;
    grid-template-columns: 1fr 5fr;
    gap: 2rem;
    container-type: normal;
  }

  .courses .number {
    font-family: var(--font-emphasis);
    /* font-size: clamp(180px, 25cqh, 230px); */
    font-size: 12ch;
    text-align: center;
    line-height: 1;
    width: 100%;
    height: 100%;
    padding-top: 5px;
    /* border: 1px solid red; */
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .courses .number span {
    background-clip: text;
    text-fill-color: transparent;
    background-image: var(--full-gradient);
    background-size: 100%;
    -webkit-background-clip: text;
    -moz-background-clip: text;
    -webkit-text-fill-color: transparent;
    -moz-text-fill-color: transparent;
  }

  .courses .topic > * {
    display: inline;
  }

  .courses .topic h3 {
    color: var(--color-brand-secondary-light);
    font-size: var(--step-1);
    font-weight: 700;
    margin-right: 9px;
    margin-block-end: var(--space-xs);
  }

  .courses .topic p {
    font-size: var(--step-1);
    font-weight: 300;
  }

  .courses .topic-description {
    font-family: var(--font-sans);
  }

  .courses .topic-description.flow {
    --flow-space: 0.5rem;
  }

  @media (max-width: 640px) {
    .courses .topics-wrapper {
      flex-direction: column;
    }

    .courses .topics-header {
      text-align: left;
      align-self: start;
      writing-mode: horizontal-tb;
      transform: rotate(0deg);
      margin-right: 0;
      top: 0;
      margin-bottom: var(--space-l);
    }

    .courses .course-intro {
      font-size: var(--step-1);
      max-width: none;
    }

    .courses.flow {
      gap: 1rem;
    }

    .accordion-button {
      gap: 1rem;
      display: grid;
      grid-template-columns: 4fr 1fr;
      padding: 1rem;
    }

    .accordion-button > :last-child {
      justify-self: center;
    }
  }

  @media (max-width: 540px) {
    .courses .topic-grid {
      grid-template-columns: 1fr;
      gap: 0rem;
    }

    .courses .number {
      /* font-size: var(--step-8); */
      justify-content: flex-start;
    }

    .courses .course-intro {
      font-size: var(--step-0);
    }

    .courses .topic h3,
    .courses .topic p {
      font-size: var(--step-0);
    }
  }
</style>

