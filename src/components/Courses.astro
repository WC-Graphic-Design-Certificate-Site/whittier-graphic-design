---
import Accordion from "./Svelte/Accordion.svelte";
import { slugify } from "../utils/format";

const { courses } = Astro.props;
---

<div class="courses flow">
  {
    courses.map((course, index) => (
      <div id={slugify(course.title)}>
        <Accordion
          client:load
          startsOpen={index === 0}
          gradientStyle={`--gradient-fill: var(--gradient-${index + 1});`}
        >
          <Fragment slot="title">
            <span>
              {course.title}
              {course.subtitle && (
                <span class="course-subtitle" style="">
                  {`(${course.subtitle})`}
                </span>
              )}
            </span>
          </Fragment>
          <article slot="panel">
            <div class="course-intro">{course.description}</div>
            <div class="topics-wrapper">
              <div class="topics-header">
                <p style="font-weight: 700;">Weekly Topics</p>
                <p style="font-weight: 400;">{course.title}</p>
              </div>
              <ol class="topics flow">
                {course.topics &&
                  course.topics.map((topic, index) => {
                    const svgNum = `/svg/num-${index + 1}.svg`;

                    return (
                      <li class="topic-grid">
                        <div class="number-wrapper">
                          <div
                            class="number"
                            style={`--number: url('${svgNum}')`}
                          />
                        </div>
                        <div class="topic">
                          <h3>{`${topic.title}:`}</h3>
                          <p>{topic.text}</p>
                        </div>
                      </li>
                    );
                  })}
              </ol>
            </div>
          </article>
        </Accordion>
      </div>
    ))
  }
</div>

<style is:global>
  .courses.flow {
    gap: 0;
    --flow-space: 0.5rem;
  }

  .courses .topics.flow {
    --flow-space: var(--space-xl);
  }

  .accordion-button {
    --gradient-1: linear-gradient(
      15deg,
      rgba(79, 32, 81, 1) 0%,
      rgba(142, 46, 101, 1) 34%,
      rgba(121, 49, 66, 1) 65%,
      rgba(138, 82, 58, 1) 100%
    );
    --gradient-2: linear-gradient(
      30deg,
      rgba(79, 32, 81, 1) 25%,
      rgba(142, 46, 101, 1) 50%,
      rgba(121, 49, 66, 1) 75%,
      rgba(138, 82, 58, 1) 100%
    );
    --gradient-3: linear-gradient(
      45deg,
      rgba(121, 49, 66, 1) 0%,
      rgba(79, 32, 81, 1) 35%,
      rgba(142, 46, 101, 1) 60%,
      rgba(138, 82, 58, 1) 100%
    );
    --gradient-4: linear-gradient(
      60deg,
      rgba(121, 49, 66, 1) 25%,
      rgba(79, 32, 81, 1) 45%,
      rgba(142, 46, 101, 1) 80%,
      rgba(138, 82, 58, 1) 100%
    );
    --gradient-5: linear-gradient(
      270deg,
      rgba(121, 49, 66, 1) 25%,
      rgba(79, 32, 81, 1) 45%,
      rgba(142, 46, 101, 1) 80%,
      rgba(138, 82, 58, 1) 100%
    );
    --gradient-6: linear-gradient(
      270deg,
      rgba(121, 49, 66, 1) 0%,
      rgba(79, 32, 81, 1) 35%,
      rgba(142, 46, 101, 1) 60%,
      rgba(138, 82, 58, 1) 100%
    );
    --gradient-7: linear-gradient(
      270deg,
      rgba(79, 32, 81, 1) 25%,
      rgba(142, 46, 101, 1) 50%,
      rgba(121, 49, 66, 1) 75%,
      rgba(138, 82, 58, 1) 100%
    );
    --gradient-8: linear-gradient(
      270deg,
      rgba(79, 32, 81, 1) 0%,
      rgba(142, 46, 101, 1) 34%,
      rgba(121, 49, 66, 1) 65%,
      rgba(138, 82, 58, 1) 100%
    );
    --gradient-9: linear-gradient(
      135deg,
      rgba(79, 32, 81, 1) 0%,
      rgba(142, 46, 101, 1) 34%,
      rgba(121, 49, 66, 1) 65%,
      rgba(138, 82, 58, 1) 100%
    );
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border: 0;
    margin: 0;
    padding: 1rem 2rem 1rem 1rem;
    width: 100%;
    appearance: none;
    color: inherit;
    cursor: pointer;
    font-size: var(--step-1);
    color: var(--color-neutral-light);
    background: var(--gradient-fill);
    font-family: var(--font-secondary);
    font-weight: 400;
    text-align: left;
    text-transform: uppercase;
    letter-spacing: 0.1rem;
    /* clip-path: polygon(0 0, 100% 0, 97% 100%, 0% 100%); */
  }

  .accordion-button:hover {
    background: var(--color-brand-secondary-dark);
  }

  .accordion-panel {
    padding-block: var(--space-l);
    /* padding-inline: 1rem; */
  }

  .courses .course-intro {
    font-size: var(--step-2);
    font-family: var(--font-primary);
    color: var(--color-brand-secondary-light);
    /* max-width: 64ch; */
    margin-block-end: var(--space-2xl);
  }

  .courses .topics-wrapper {
    display: flex;
  }

  .courses .topics-header {
    position: relative;
    font-family: var(--font-secondary);
    font-size: var(--step-1);
    text-transform: uppercase;
    letter-spacing: 0.2rem;
    text-align: right;
    align-self: start;
    writing-mode: vertical-rl;
    transform: rotate(180deg);
    margin-right: var(--space-2xl);
    color: var(--color-brand-secondary-light);
    top: 1rem;
  }

  .courses .course-subtitle {
    position: relative;
    margin-left: 6px;
    /* font-family: var(--font-sans);
    font-weight: 400; */
  }

  .courses .topic-grid {
    position: relative;
    display: flex;
    align-items: center;
    gap: 3.5rem;
  }

  .courses .number-wrapper {
    min-width: 150px;
    padding: 11px 0px 8px;
    height: 100%;
  }

  .courses .number {
    /* align-self: stretch; */
    position: relative;
    background-image: var(--number);
    background-repeat: no-repeat;
    background-size: contain;
    background-position: center;
    width: 100%;
    height: 100%;
  }

  /* .courses .number img {
    height: 100%;
    object-fit: fill;
  } */

  /* .courses .topic {
    max-width: 90ch;
  } */

  .courses .topic > * {
    display: inline;
  }

  .courses .topic h3 {
    color: var(--color-brand-secondary-light);
    font-size: var(--step-1);
    font-weight: 700;
    margin-right: 9px;
    margin-block-end: var(--space-xs);
  }

  .courses .topic p {
    font-size: var(--step-1);
    font-weight: 300;
  }

  .courses .topic-description {
    font-family: var(--font-sans);
  }

  .courses .topic-description.flow {
    --flow-space: 0.5rem;
  }

  @media (max-width: 1024px) {
    .courses .topic-grid {
      flex-direction: column;
      align-items: flex-start;
      gap: 2rem;
    }

    .courses .number-wrapper {
      position: relative;
      left: -9px;
      height: 100px;
      padding: 0;
    }

    .courses .number {
      background-position: left;
    }
  }

  @media (max-width: 768px) {
    .accordion-panel {
      padding-inline: 1rem;
    }
  }

  @media (max-width: 640px) {
    .courses .topics-wrapper {
      flex-direction: column;
    }

    .courses .number-wrapper {
      height: 75px;
    }

    .courses .topics-header {
      text-align: left;
      align-self: start;
      writing-mode: horizontal-tb;
      transform: rotate(0deg);
      margin-right: 0;
      top: 0;
      margin-bottom: var(--space-l);
    }

    .courses .course-intro {
      font-size: var(--step-1);
      max-width: none;
    }

    .courses.flow {
      gap: 0.25rem;
    }

    .accordion-button {
      gap: 1rem;
      display: grid;
      grid-template-columns: 4fr 1fr;
      padding: 1rem;
    }

    .accordion-button > :last-child {
      justify-self: center;
    }
  }

  @media (max-width: 540px) {
    .courses .topic-grid {
    }

    .courses .number {
      /* font-size: var(--step-8); */
      justify-content: flex-start;
    }

    .courses .course-intro {
      font-size: var(--step-0);
    }

    .courses .topic h3,
    .courses .topic p {
      font-size: var(--step-0);
    }
  }
</style>

