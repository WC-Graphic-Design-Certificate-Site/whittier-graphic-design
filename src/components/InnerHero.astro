---
const { title, imageSrc, imageAlt = "" } = Astro.props;
---

<section class="hero">
  <div class="content">
    <h1 class="title header">{title}</h1>
  </div>
  <div class="background"></div>
  <img class="img" src={imageSrc} alt={imageAlt} loading="eager" />
</section>

<style>
  .hero {
    position: relative;
    overflow: hidden;
    height: clamp(var(--space-3xl), 45vh, 60rem);
  }

  .hero .content {
    position: relative;
    z-index: 3;
  }

  .title {
    font-family: var(--font-emphasis);
    font-size: var(--step-10);
    color: var(--color-neutral-light);
    line-height: 1;
    position: relative;
    letter-spacing: 1rem;
    text-transform: uppercase;
    top: -16px;
  }

  .background {
    position: absolute;
    inset: 0;
    width: clamp(var(--space-3xl), 70%, 90vw);
    background: var(--purple-gradient);
    /* background-color: var(--color-brand-primary); */
    clip-path: var(--angled-clip-path);
    z-index: 2;
  }

  .img {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: clamp(var(--space-3xl), 50%, 50vw);
    object-fit: cover;
    height: 100%;
  }

  @media (max-width: 1024px) {
    .title {
      font-size: var(--step-8);
    }
  }

  @media (max-width: 640px) {
    .title {
      font-size: var(--step-7);
      letter-spacing: 0.5rem;
    }
    .hero {
      height: clamp(var(--space-3xl), 25vh, 12rem);
    }
  }

  @media (max-width: 480px) {
    .title {
      font-size: var(--step-6);
      top: -12px;
    }
  }
</style>
