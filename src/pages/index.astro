    justify-content: center;
    bottom: 2rem;
    left: 0;
    right: 0;
    margin-inline: auto;
  }

  .scroll svg {
    width: 4rem;
    opacity: 0.4;
    fill: var(--color-neutral-light);
    transition: all 0.2s ease;
  }

  .scroll a:hover svg {
