  }

  @media (max-width: 768px) {
    .hero .header-grid {
      /* grid-template-columns: 40px 1fr; */
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .hero h1 {
      order: 2;
      writing-mode: horizontal-tb;
      transform: rotate(0deg);
      text-align: center;
      align-self: center;
    }
  }

  @media (max-width: 640px) {
    #about p {
      font-size: var(--step-2);
      max-width: none;
    }
  }
</style>

