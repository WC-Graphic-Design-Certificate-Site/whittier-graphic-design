---
import InnerPage from "../layouts/InnerPage.astro";
import InnerHero from "../components/InnerHero.astro";
import { getCurrentPage } from "../data/pages";
import { SEO } from "astro-seo";
import { urlFor } from "../utils/sanity";

const currentPage = getCurrentPage("6d566278-d441-4734-b1e6-3895519c2a3a");
const { title, image, seo } = currentPage;

// const bgImage = urlFor(image).width(1000).auto("format").url();
---

<InnerPage route="/contact">
  <SEO
    slot="pageHead"
    title={seo.title}
    description={seo.description}
    openGraph={{
      basic: {
        title: seo.openGraph.title,
        type: "website",
        image: urlFor(seo.openGraph.image).width(1200).auto("format").url(),
      },
      optional: {
        description: seo.openGraph.description,
      },
    }}
  />
  <InnerHero slot="hero" title={title} image={image} />
  <div slot="content" class="grid">
    <div class="contact">
      <div class="">
        <h2 class="heading">For more information, contact:</h2>
        <div class="text">
          <p>Whittier College Admissions Office</p>
          <p>
            <a href="mailto:certificates@whittier.edu">certificates@whittier.edu</a
            >
          </p>
          <p>(562) 907-4238 (Office)</p>
        </div>
      </div>
    </div>
    <div id="form">
      <h2 class="form-title heading">Want to know more?</h2>
      <div id="form_c9b48a2a-571f-4d6a-bd11-d73f3549b563">Loading...</div>
    </div>
  </div>
</InnerPage>

<style>
  .grid {
    position: relative;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    padding-block: var(--space-xl);
    justify-items: center;
  }

  .grid::after {
    content: "";
    position: absolute;
    height: calc(100% - var(--space-xl) - var(--space-xl));
    width: 1px;
    background: var(--color-brand-secondary-light);
    top: 50%;
    transform: translateY(-50%);
  }

  .relative {
    position: relative;
  }

  .heading {
    color: var(--color-brand-secondary-light);
    font-family: var(--font-primary);
    font-size: var(--step-2);
    font-weight: 700;
  }

  #form .heading {
    margin-bottom: 1rem;
  }

  .text {
    font-size: var(--step-2);
    font-family: var(--font-primary);
    color: var(--color-brand-secondary-light);
  }

  .form {
    min-width: 460px;
  }

  .form-items {
    margin-top: 1rem;
  }

  .form-items > :last-child {
    place-self: flex-end;
  }

  .form-item {
    position: relative;
    background: #ccbcd3;
    padding: 8px 12px 6px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    max-width: 500px;
    border-bottom: 2px solid transparent;
    width: 100%;
  }

  .form-item:focus-within {
    border-bottom: 2px solid var(--color-brand-secondary);
  }

  .form-item label {
    position: absolute;
    bottom: 6px;
    align-self: flex-end;
    font-family: var(--font-secondary);
    font-size: 16px;
    text-transform: uppercase;
    letter-spacing: 0.1rem;
    color: var(--color-brand-secondary-dark);
  }

  .form input {
    font-size: 15px;
    display: block;
    padding: 2px;
    margin: 0;
    border: none;
    background: #ccbcd3;
    color: var(--color-brand-secondary-dark);
  }

  .form input:focus-within {
    outline: none;
  }

  .form input[type="submit"] {
    font-family: var(--font-secondary);
    font-size: 16px;
    text-transform: uppercase;
    letter-spacing: 0.1rem;
    transition: all 0.2s ease;
    background: #dba226;
    border-radius: 0px;
    border: none;
    outline: none;
    cursor: pointer;
    padding: 6px 9px;
    color: var(--color-brand-secondary-dark);
  }

  .form input[type="submit"]:hover {
    opacity: 0.8;
  }

  @media (max-width: 1024px) {
    .grid {
      grid-template-columns: 1.5fr 1fr;
    }

    .grid::after {
      display: none;
    }

    .form {
      min-width: unset;
      width: 100%;
    }
  }

  @media (max-width: 768px) {
    .grid {
      grid-template-columns: 1fr;
      gap: 3rem;
      justify-items: start;
    }

    .contact,
    .form {
      padding-inline: var(--gutter);
    }

    .form .flow > * {
      max-width: none !important;
      margin-inline: 0px !important;
    }
  }

  @media (max-width: 640px) {
    .heading,
    .contact .text {
      font-size: var(--step-1);
    }
  }
</style>

