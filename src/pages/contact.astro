---
import InnerPage from "../layouts/InnerPage.astro";
import InnerHero from "../components/InnerHero.astro";
import Button from "../components/Button.astro";
import { getCurrentPage } from "../data/pages";

const currentPage = getCurrentPage("6d566278-d441-4734-b1e6-3895519c2a3a");
const { title, image, imageAlt, slug, seo } = currentPage;
---

<InnerPage title={seo.title} metaDescription={seo.description}>
  <InnerHero slot="hero" title={title} imageSrc={image} imageAlt={imageAlt} />
  <div slot="content" class="">
    <div class="center-items">
      Lorem ipsum dolor sit amet consectetur adipisicing elit. Mollitia cum
      ipsum maiores atque a modi illo fugit eligendi sapiente amet?
    </div>
    <form class="form" action="">
      <div class="form-title">Request Information</div>
      <div class="split">
        <div class="form-item">
          <label for="first-name">First Name</label>
          <input
            id="first-name"
            name="first-name"
            type="text"
            autocomplete="given-name"
          />
        </div>
        <div class="form-item">
          <label for="last-name">Last Name</label>
          <input
            id="last-name"
            name="last-name"
            type="text"
            autocomplete="family-name"
          />
        </div>
      </div>
      <div class="form-item max-w">
        <label for="email">Email</label>
        <input id="email" name="email" type="email" autocomplete="email" />
      </div>
      <div class="form-item max-w">
        <label for="phone">Phone</label>
        <input
          id="phone"
          name="phone"
          type="tel"
          pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"
          autocomplete="tel"
        />
      </div>
      <div>
        <Button type="submit" title="submit">Submit</Button>
      </div>
    </form>
  </div>
</InnerPage>

<style>
  .form {
    display: flex;
    flex-direction: column;
    margin-bottom: var(--space-3xl);
    margin-inline: auto;
    max-width: 45rem;
    gap: 2rem;
    padding: 3rem;
    background: #e4dbdf4f;
    /* border: 1px solid var(--color-brand-primary); */
  }

  .form-title {
    font-family: var(--font-primary);
    color: var(--color-brand-secondary-light);
    font-size: var(--step-2);
  }

  .split {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
  }

  .form-item {
    display: flex;
    flex-direction: column;
  }

  .form-item.max-w {
    max-width: 28rem;
  }

  .form-item label {
    font-family: var(--font-secondary);
    font-size: var(--step--1);
    text-transform: uppercase;
    letter-spacing: 0.1rem;
    color: var(--color-brand-secondary-light);
    margin-bottom: 9px;
  }

  .form input {
    padding-block: 0.375rem;
    padding-inline: 0.5rem;
    border: 1px solid var(--color-brand-primary);
    border-radius: 3px;
  }

  .center-items {
    font-size: var(--step-2);
    font-family: var(--font-primary);
    color: var(--color-brand-secondary-light);
    margin-bottom: var(--space-2xl);
  }

  @media (max-width: 768px) {
    .split {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
</style>
