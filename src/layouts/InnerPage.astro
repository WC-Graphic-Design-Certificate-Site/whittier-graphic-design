---
import Layout from "./Layout.astro";
import SiteHeader from "../components/SiteHeader.astro";
import SiteFooter from "../components/SiteFooter.astro";

const { title, metaDescription, preloadImg } = Astro.props;
---

<Layout>
  <Fragment slot="pageHead">
    <slot name="pageHead" />
    <!-- <link rel="preload" href={preloadImg} as="image" /> -->
  </Fragment>
  <SiteHeader slot="header" />
  <main slot="main" class="content-wrapper">
    <slot name="hero" />
    <div class="content" id="content">
      <slot name="content" />
    </div>
  </main>
  <div class="content-wrapper" slot="footer">
    <SiteFooter />
  </div>
</Layout>

<style>
  .hero {
    position: relative;
    overflow: hidden;
    height: clamp(var(--space-3xl), 50vh, 60rem);
  }

  .hero .content-wrapper {
    position: relative;
    font-size: var(--step-9);
    color: var(--color-brand-primary-light);
    letter-spacing: 1rem;
    text-transform: uppercase;
    z-index: 3;
  }

  .background {
    position: absolute;
    inset: 0;
    width: clamp(var(--space-3xl), 70%, 90vw);
    background-color: var(--color-brand-primary);
    clip-path: polygon(0 0, 100% 0, 90% 100%, 0% 100%);
    z-index: 2;
  }

  .img {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: clamp(var(--space-3xl), 50%, 50vw);
    object-fit: cover;
    height: 100%;
  }

  .content {
    margin-block: 2rem;
    /* margin-block-end: var(--space-3xl); */
  }

  @media (max-width: 768px) {
    .content-wrapper {
      padding-inline: 0;
    }
  }
</style>
